<h1>Create Task</h1>

<%= form_for(@todo_item) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :completed %><br />
    <%= f.check_box :completed %>
  </div>
  <div class="field">
    <%= f.label :deleted %><br />
    <%= f.check_box :deleted %>
  </div>
  <div class="field">
    <%= f.label :due_at %><br />
    <%= f.datetime_select :due_at %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h2>Pending Tasks</h2>

  <ol>
  <% @todo_items.each do |todo_item| %>
    <li>
      <span><%= todo_item.name %></span>
      <span><%= todo_item.due_at %></span>
      <span><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </li>
<% end %>
</ol>

<h2>Completed Tasks</h2>

  <ol>
  <% @completed_items.each do |completed_item| %>
    <li>
      <span><%= completed_item.name %></span>
      <span><%= completed_item.due_at %></span>
      <span><%= link_to 'Destroy', completed_item, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </li>
<% end %>
</ol>



